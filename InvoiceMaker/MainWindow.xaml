        <Button Click="EnterBtn_Click" Name="EnterBtn" Content="Enter" Grid.Column="8" HorizontalAlignment="Left" Margin="26,2.8,0,0" Grid.Row="5" VerticalAlignment="Top" Width="56" RenderTransformOrigin="1.011,-0.719"/>

    </Grid>
</Window>
